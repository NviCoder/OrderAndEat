<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".register">

    <ProgressBar
        android:id="@+id/pb"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="658dp" />


    <ImageView
        android:id="@+id/imageView_logo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="-10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.144"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imageView_email"
        android:layout_width="362dp"
        android:layout_height="115dp"
        android:layout_below="@id/et_email"
        android:layout_marginTop="77dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView_logo"
        app:srcCompat="@drawable/username" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="305dp"
        android:layout_height="43dp"
        android:layout_above="@id/imageView_email"
        android:layout_marginTop="36dp"
        android:background="@android:color/transparent"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="#BDBDBD"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/imageView_email"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="@+id/imageView_email"
        app:layout_constraintTop_toTopOf="@+id/imageView_email" />

    <ImageView
        android:id="@+id/imageView_password"
        android:layout_width="362dp"
        android:layout_height="115dp"
        android:layout_below="@id/et_password"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView_email"
        app:srcCompat="@drawable/password"

        />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="305dp"
        android:layout_height="43dp"
        android:layout_above="@id/imageView_password"
        android:layout_marginTop="36dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#BDBDBD"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/imageView_password"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="@+id/imageView_password"
        app:layout_constraintTop_toTopOf="@+id/imageView_password" />

    <ImageView
        android:id="@+id/imageView_full_name"
        android:layout_width="362dp"
        android:layout_height="115dp"
        android:layout_below="@id/et_password"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView_password"
        app:srcCompat="@drawable/input_rectangle"

        />

    <EditText
        android:id="@+id/et_full_name"
        android:layout_width="305dp"
        android:layout_height="43dp"
        android:layout_above="@id/imageView_full_name"
        android:layout_marginTop="36dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Full name"
        android:inputType="textPersonName"
        android:textColorHint="#BDBDBD"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/imageView_password"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="@+id/imageView_password"
        app:layout_constraintTop_toTopOf="@+id/imageView_full_name" />

    <ImageView
        android:id="@+id/imageView_phone_number"
        android:layout_width="362dp"
        android:layout_height="115dp"
        android:layout_below="@id/et_password"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView_full_name"
        app:srcCompat="@drawable/input_rectangle"

        />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="305dp"
        android:layout_height="43dp"
        android:layout_above="@id/imageView_full_name"
        android:layout_marginTop="36dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Phone number"
        android:inputType="phone"
        android:textColorHint="#BDBDBD"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/imageView_phone_number"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="@+id/imageView_phone_number"
        app:layout_constraintTop_toTopOf="@+id/imageView_phone_number" />


    <ImageView
        android:id="@+id/imageView_signup"
        android:layout_width="362dp"
        android:layout_height="115dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_phone"
        app:srcCompat="@drawable/sign_up" />

    <Button
        android:id="@+id/bt_sign_up"
        android:layout_width="366dp"
        android:layout_height="50dp"
        android:layout_marginTop="33dp"
        android:width="300dp"
        android:background="@android:color/transparent"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/imageView_signup"
        app:layout_constraintStart_toStartOf="@+id/imageView_signup"
        app:layout_constraintTop_toTopOf="@+id/imageView_signup">

    </Button>

    <Switch
        android:id="@+id/switch_employee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="204dp"
        android:layout_marginTop="100dp"
        android:text="I am an employee  "
        android:textColor="#BDBDBD"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="@+id/imageView_phone_number"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView_phone_number"
        app:layout_constraintTop_toTopOf="@+id/imageView_phone_number" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="387dp" />


</androidx.constraintlayout.widget.ConstraintLayout>